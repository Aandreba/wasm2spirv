{
    "name": "wasm2spirv",
    "version": "0.1.1",
    "description": "Compile your WebAssembly programs into SPIR-V shaders",
    "main": "index.js",
    "scripts": {
        "build": "cd ../c && cargo +nightly build --release --target wasm32-wasi --no-default-features --features=\"spvc naga\"",
        "test": "npm run build && jest",
        "doc": "jsdoc . -c \"jsdoc.config.json\"",
        "spirv": "npx swc ./generate_spirv.ts -q | node --input-type=module"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Aandreba/wasm2spirv.git"
    },
    "author": "Alex Andreba",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/Aandreba/wasm2spirv/issues"
    },
    "homepage": "https://github.com/Aandreba/wasm2spirv#readme",
    "dependencies": {
        "@wasmer/wasi": "^1.2.2"
    },
    "devDependencies": {
        "@jest/globals": "^29.6.2",
        "@swc/cli": "^0.1.62",
        "@swc/core": "^1.3.73",
        "@swc/jest": "^0.2.27",
        "@types/jest": "^29.5.3",
        "clean-jsdoc-theme": "^4.2.9",
        "docdash": "^2.0.1",
        "expose-gc": "^1.0.0",
        "jest": "^29.6.2",
        "jsdoc": "^4.0.2",
        "typescript": "^5.1.6"
    }
}
